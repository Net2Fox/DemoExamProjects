<Window x:Class="Session.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session"
        mc:Ignorable="d"
        Title="Компьютерный сервис" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Orientation="Horizontal">
            <Button x:Name="BackButton" Grid.Row="0" Content="Назад" Margin="5" Click="BackButton_Click" VerticalAlignment="Center"/>
            <Image x:Name="UserImage" Source="{Binding CurrentUser.Image}" Width="70" Height="70" Margin="10,0,0,0"/>
            <TextBlock x:Name="FullNameTextBlock" VerticalAlignment="Center" Margin="10,0,0,0"/>
        </StackPanel>
        <TextBlock x:Name="UserRoleTextBlock" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="0" Margin="0,0,10,0"/>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Source="/Pages/LoginPage.xaml" Grid.RowSpan="2" Navigated="MainFrame_Navigated"/>
    </Grid>
</Window>
