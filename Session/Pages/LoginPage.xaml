<Page x:Class="Session.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Session.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница входа">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200">
            <TextBlock Text="Введите логин:"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Введите пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordTextBox"/>
            <Button x:Name="LoginButton" Margin="0,10,0,0" Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
