<Window x:Class="GIBDD_Gorlanov_619.Windows.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GIBDD_Gorlanov_619.Windows"
        mc:Ignorable="d"
        Title="Смена статуса лицензии" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Причина изменения:" Margin="20, 20, 10, 10"/>
        <TextBox Text="{Binding Description}" Margin="20, 40, 20, 20"/>
        <Button Grid.Row="1" Content="Сохранить" HorizontalAlignment="Center" Click="Button_Click"/>
    </Grid>
</Window>
