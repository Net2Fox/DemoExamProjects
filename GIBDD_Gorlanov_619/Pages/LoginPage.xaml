<Page x:Class="GIBDD_Gorlanov_619.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GIBDD_Gorlanov_619.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150*"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Source="/Images/gibdd_logo.png"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Width="150">
            <TextBlock Text="Логин:" Margin="0,10,0,0"/>
            <TextBox x:Name="LoginTextBox" Margin="0,0,0,0"/>
            <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordTextBox" Margin="0,0,0,0"/>
            <Button x:Name="LoginButton" Margin="0,10,0,0" Width="50" Content="Войти" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
